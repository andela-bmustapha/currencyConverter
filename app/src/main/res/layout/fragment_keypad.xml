<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="8dp"
              android:paddingLeft="8dp"
              android:paddingRight="8dp"
              android:paddingTop="8dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/delete_button"
            android:drawableLeft="@drawable/ic_backspace_white_18dp"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="DEL"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="@drawable/ps__button_youtube"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/clear_button"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="@drawable/ps__button_rss"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/divide_button"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="\u00F7"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/number_7"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/number_8"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/number_9"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/times_button"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="\u00D7"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/number_4"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/number_5"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/number_6"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/minus_button"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/number_1"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/number_2"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/number_3"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="3"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/addition_button"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/decimal_point_button"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/number_0"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:background="@drawable/ps__button_github"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/equal_to_button"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:background="@drawable/ps__button_evernote"
            android:layout_height="match_parent"/>

    </LinearLayout>



</LinearLayout>
